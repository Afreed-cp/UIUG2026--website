---
interface Props {
  title?: string;
  description?: string;
  image?: string;
  url?: string;
  type?: string;
  keywords?: string;
}

const {
  title,
  description,
  image,
  url,
  type,
  keywords
} = Astro.props;

const siteUrl = import.meta.env.PUBLIC_SITE_URL;
const fullUrl = url && siteUrl ? `${siteUrl}${url}` : (siteUrl || url || '');
const fullImage = image ? (image.startsWith('http') ? image : (siteUrl ? `${siteUrl}${image}` : image)) : undefined;
---

{title && <title>{title}</title>}
{description && <meta name="description" content={description} />}
{keywords && <meta name="keywords" content={keywords} />}

<!-- Open Graph / Facebook -->
{type && <meta property="og:type" content={type} />}
{fullUrl && <meta property="og:url" content={fullUrl} />}
{title && <meta property="og:title" content={title} />}
{description && <meta property="og:description" content={description} />}
{fullImage && <meta property="og:image" content={fullImage} />}

<!-- Twitter -->
{fullUrl && <meta name="twitter:card" content="summary_large_image" />}
{fullUrl && <meta name="twitter:url" content={fullUrl} />}
{title && <meta name="twitter:title" content={title} />}
{description && <meta name="twitter:description" content={description} />}
{fullImage && <meta name="twitter:image" content={fullImage} />}

<!-- Canonical URL -->
<link rel="canonical" href={fullUrl} />

<!-- Resource Hints for Performance -->
<link rel="dns-prefetch" href="https://unpkg.com" />
<link rel="preconnect" href="https://unpkg.com" crossorigin />

<!-- Additional meta tags -->
<meta name="generator" content="Astro" />
<meta name="robots" content="index, follow" />

